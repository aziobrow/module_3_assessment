<h1>Best Buy Locations Within 25 Miles</h1>
<h3><%= @stores_total %> Total Stores</h3>

<%= will_paginate @stores %>
<%= @stores.each do |store| %>
  <div class="store">
    <h3 class="name"><%=  store.name %></h3>
      <ul>
      <li class="store-type">Store Type: <%=  store.store_type %></li>
      <li class="city">City: <%=  store.city %></li>
      <li class="distance">Distance: <%=  store.distance %> miles away</li>
      <li class="phone">Phone Number: <%=  store.phone %></li>
    </ul></br>
  </div>
<% end %>
